<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#888888"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <RatingBar
        android:id="@+id/reviewlist_star"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="17dp"
        android:layout_height="18dp"
        android:numStars="5"
        android:rating="4"
        android:stepSize="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/reviewlist_starnum"
        app:layout_constraintEnd_toStartOf="@+id/reviewlist_starnum"
        app:layout_constraintTop_toTopOf="@+id/reviewlist_starnum" />

    <ImageView
        android:id="@+id/reviewlist_image"
        android:layout_width="49dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/reviewlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/reviewlist_image"
        app:layout_constraintTop_toTopOf="@+id/reviewlist_image" />

    <TextView
        android:id="@+id/reviewlist_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/reviewlist_title"
        app:layout_constraintTop_toBottomOf="@+id/reviewlist_title" />

    <TextView
        android:id="@+id/reviewlist_starnum"
        android:layout_width="45dp"
        android:layout_height="11dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reivewlist_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewlist_image" />


</androidx.constraintlayout.widget.ConstraintLayout>